{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/proxy(.*)",
            "destination": "/api/proxy.js$1",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS",
                "PATCH"
            ]
        },
        {
            "source": "/(.*)",
            "destination": "/index.html",
            "methods": [
                "GET",
                "OPTIONS"
            ]
        }
    ],
    "headers": [
        {
            "source": "/api/proxy(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, PUT, DELETE, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization"
                }
            ]
        }
    ],
    "functions": {
        "api/proxy.js": {
            "memory": 1024,
            "maxDuration": 30
        }
    }
}